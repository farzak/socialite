{
    "name": "mosaxiv/socialite",
    "description": "OAuth 1 & OAuth 2 libraries.",
    "keywords": [
        "oauth",
        "socialite"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.0.0",
        "guzzlehttp/guzzle": "^6.0",
        "league/oauth1-client": "^1.0",
        "symfony/http-foundation": "^3.0",
        "symfony/psr-http-message-bridge": "^1.0",
        "zendframework/zend-diactoros": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "mosaxiv\\Socialite\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "mosaxiv\\Socialite\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR2 --colors -p ./src ./tests",
        "cs-fix": "phpcbf --standard=PSR2 --colors ./src ./tests"
    }
}
